{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es2020"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "utils/**/*.ts",
    "benchmark/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}